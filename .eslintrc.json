{
  "root": true,
  "extends": "airbnb-typescript",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  }
}
